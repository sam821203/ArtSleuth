{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "linebreak-style": "off",
        "vue/no-multiple-template-root": "off",
        "vue/require-prop-types": "off",
        "import/extensions": [
            "error",
            "always"
        ],
        "vue/max-attributes-per-line": ["error", {
            "singleline": {
                "max": 3
            }
        }],
        "no-param-reassign": [2, { "props": false }]
    }
}
